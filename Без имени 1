//домашняя работа Еремина Ильи
#include <iostream>
using namespace std;
int main()
{
    setlocale(LC_ALL,"Russian");
    int m, n,
        a = 1, // количесвто элементов
        max = 1; // макс число повторений элемента

        cout << "введите размеры матрицы"<< endl;
        cin  >> m;
        cin  >> n;

    int arr[m][n];
    // определяем рандомный массив
    for (int i = 0; i < m; i++)
    {
        for (int j = 0; j < n; j++)
        {
            arr[i][j] = rand()%9;
            cout << arr[i][j];
        }
        cout << endl;
    }

    //определяет столбец
    for (int i = 0; i < n; i++)
    {
        //определяет строку
        for (int j = 0; j < m; j++)
        {
                //сравнивает с прошлым разом
                if (arr[j][i] != -1)
                {
                    //сравнивает с текущим
                    for (int r = j + 1; r < m; r++)
                    {

                        //подсчитывает количество совпавших элементов и
                        //помечает посчитанные
                        if (arr[j][i] == arr[r][i])
                        {
                            a++;
                            arr[r][i] = -1;
                        }
                    }

                    //поиск макс числа совпавших
                    if (a > max)
                    {
                        max = a;
                    }
                    //обнуление элемента суммы
                    a = 1;
                }
                //пропускает элемент если он уже был сравнён до этого
                else
                {
                    continue;
                }

            //пропускает столбец если его уже нет смысла проверять

        }
        //выводит максимальное количество элементов в столбце
        cout << "максимальное количесто совпавших элементов в " << i + 1 << "столбце =";
        cout << max<< endl;
                //обнуление переменных
        a = 1;
        max = 1;
    }

    return 0;
}

