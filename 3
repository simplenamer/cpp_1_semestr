#include <iostream>
using namespace std;
int main() {

        for (int i = 1; i <= 3; i++) {
            for (int j = 0; j < i; j++) {
                cout << " ";
            }
            for (int j = 3; j > i; j--) {
                cout << "  ";
            }

            for (int j = 0; j < 2 * i - 1; j++) {
                cout << "*";
            }
            cout << endl;
        }


        for (int i = 1; i <= 3; i++) {
                for (int j = 3; j > i; j--) {
                    cout << " ";
                }

                for (int j = 0; j < 2 * i - 1; j++) {
                    cout << "*";
                }
                cout << " ";
                for (int j = 3; j > i; j--) {
                    cout << "  ";
                }

                for (int j = 0; j < 2 * i - 1; j++) {
                    cout << "*";
                }
                cout << endl;
        }
}


